        <Label x:Name="label2" Content="Attempts" HorizontalAlignment="Left" Margin="781,75,0,0" VerticalAlignment="Top" Width="60"/>
        <Label x:Name="attempts_label" Content="0" HorizontalAlignment="Left" Margin="846,75,0,0" VerticalAlignment="Top" Width="54"/>
